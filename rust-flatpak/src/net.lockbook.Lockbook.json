{
    "app-id": "net.lockbook.Lockbook",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "build-options": {
        "append-path": "usr/lib/sdk/rust-stable/bin"
    },
    "command": "lockbook-linux",
    "finish-args": [
       "--socket=x11",
       "--device=dri",
       "--share=network"
    ],
    "modules": [
        {
            "name": "lockbook",
            "buildsystem": "simple",
            "build-commands": [
                "cp ./assets/logo.svg /app/share/icons/hicolor/scalable/apps/net.lockbook.Lockbook.svg",
                "mkdir -p /app/share/metainfo/",
                "cp ./assets/net.lockbook.Lockbook.metainfo.xml /app/share/metainfo/net.lockbook.Lockbook.metainfo.xml",
                "mkdir -p /app/share/applications",
                "cp ./assets/lockbook-desktop.desktop /app/share/applications/net.lockbook.Lockbook.desktop"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lockbook/lockbook/",
                    "tag": "25.12.15",
                    "commit": "1dc16ec7e3d6e90178c7dffc603f1d6936f18269"
                }
            ]
        }
    ]
}
